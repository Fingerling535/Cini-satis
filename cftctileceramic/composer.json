{
  "name": "cftctileceramic/shopier",
  "type": "library",
  "description": "Shopier Payment Gateway Integration - PHP API SDK",
  "keywords": [
    "shopier",
    "api",
    "payment gateway",
    "payment integration",
    "ödeme alma entegrasyonu",
    "entegrasyon",
    "integration"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Erkan Çiftçi",
      "email": "satis@cftctileceramic.com",
      "homepage": "https://www.cftctileceramic.com/"
    }
  ],
  "config": {
    "platform": {
      "php": "7.2.5"
    },
    "autoloader-suffix": "Shopier",
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Shopier\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Shopier\\Tests\\": "tests/"
    }
  },
  "require": {
    "ext-json": "*",
    "php": ">=7.2.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "^3.7",
    "vlucas/phpdotenv": "^5.6.1"
  },
  "scripts": {
    "test": "phpunit",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  }
}